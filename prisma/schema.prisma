generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  phone         String?
  address       String?       // Nuevo: Dirección de facturación
  role          Role          @default(USER)
  createdAt     DateTime      @default(now())
  reservations  Reservation[]
  otp           String?       
  otpExpires    DateTime?     
}

model Space {
  id           String        @id @default(cuid())
  name         String        @unique
  description  String?       
  images       String[]      // CAMBIO: Array de strings para el carrusel
  equipment    String?       
  capacity     Int
  pricePerHour Float
  reservations Reservation[]
}

// Configuración global (CMS)
model SystemConfig {
  id           String   @id @default("config")
  appName      String   @default("Reserva App")
  logoUrl      String?
  theme        String   @default("light") 
}

model Reservation {
  id        String   @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  status    String   @default("PENDING") 
  spaceId   String
  space     Space    @relation(fields: [spaceId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  userEmail String
  userName  String?
  userPhone String?
  createdAt DateTime @default(now())
  startTime String?
  endTime   String?
}